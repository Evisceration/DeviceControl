<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="30sp"
            android:id="@+id/supportTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/support"
            android:fontFamily="@string/font_thin"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/detailsTxtView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            tools:text="@string/donate_message"
            android:fontFamily="@string/font_light"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="top|center"
            android:layout_gravity="top" />

        <Button style="?android:borderlessButtonStyle"
            android:id="@+id/donateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donate_"
            android:textColor="?attr/colorAccent"
            android:layout_gravity="right" />

    </LinearLayout>
</ScrollView>
