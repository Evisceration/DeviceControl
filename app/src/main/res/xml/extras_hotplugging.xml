<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res-auto">

    <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
        android:key="mpdecision"
        android:title="@string/mpdecision"
        android:summaryOn="@string/mpdecision_summary_on"
        android:summaryOff="@string/mpdecision_summary_off"
        android:defaultValue="false" />

    <PreferenceCategory
        android:key="intelli_plug"
        android:title="@string/intelli_plug">

        <org.namelessrom.devicecontrol.preferences.AwesomeCheckBoxPreference
            android:key="intelli_plug_active"
            android:title="@string/intelli_plug"
            android:summaryOn="@string/intelli_plug_summary_on"
            android:summaryOff="@string/intelli_plug_summary_off"
            android:defaultValue="false"
            dc:filePath="@string/file_intelli_plug_active"
            dc:category="extras" />

        <org.namelessrom.devicecontrol.preferences.AwesomeCheckBoxPreference
            android:key="intelli_plug_eco"
            android:title="@string/intelli_plug_eco"
            android:summaryOn="@string/intelli_plug_eco_summary_on"
            android:summaryOff="@string/intelli_plug_eco_summary_off"
            android:defaultValue="false"
            dc:filePath="@string/file_eco_mode_active"
            dc:category="extras" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="cpu_quiet"
        android:title="@string/cpu_quiet" />

</PreferenceScreen>
