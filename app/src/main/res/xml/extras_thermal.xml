<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="msm_thermal"
        android:title="@string/msm_thermal">

        <org.namelessrom.devicecontrol.widgets.preferences.CustomEditTextPreference
            android:key="msm_thermal_temp_limit"
            android:title="@string/temp_limit" />

        <org.namelessrom.devicecontrol.widgets.preferences.CustomEditTextPreference
            android:key="msm_thermal_core_temp_limit"
            android:title="@string/core_temp_limit" />

        <org.namelessrom.devicecontrol.widgets.preferences.CustomEditTextPreference
            android:key="msm_thermal_core_max"
            android:title="@string/core_max" />

        <org.namelessrom.devicecontrol.widgets.preferences.CustomEditTextPreference
            android:key="msm_thermal_core_min"
            android:title="@string/core_min" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="intelli_thermal"
        android:title="@string/intelli_thermal">

        <org.namelessrom.devicecontrol.widgets.preferences.AwesomeCheckBoxPreference
            android:key="intelli_thermal_cc_enabled"
            android:title="@string/core_control"
            android:summary="@string/core_control_summary"
            dc:filePath="@string/file_intelli_thermal_cc"
            dc:category="extras" />

        <org.namelessrom.devicecontrol.widgets.preferences.AwesomeCheckBoxPreference
            android:key="intelli_thermal_enabled"
            android:title="@string/intelli_thermal_enabled"
            android:summary="@string/intelli_thermal_enabled_summary"
            dc:filePath="@string/file_intelli_thermal"
            dc:category="extras" />

    </PreferenceCategory>

</PreferenceScreen>
