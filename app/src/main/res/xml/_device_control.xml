<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="prefs_app"
        android:title="@string/app_name">

        <org.namelessrom.devicecontrol.preferences.CustomPreference
            android:key="pref_donate"
            android:title="@string/donate"
            android:summary="@string/donate_summary"
            app:hide_boot="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_set_on_boot"
        android:title="@string/reapply_on_boot">

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_device"
            android:title="@string/device"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_cpu"
            android:title="@string/cpusettings"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_gpu"
            android:title="@string/gpusettings"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_extras"
            android:title="@string/extras"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_voltage"
            android:title="@string/voltage_control"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_vm"
            android:title="@string/vm"
            app:hide_boot="true" />

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="sob_sysctl"
            android:title="@string/sysctl"
            app:hide_boot="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_general"
        android:title="@string/general">

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="show_launcher"
            android:title="@string/show_launcher"
            android:summary="@string/show_launcher_summary"
            app:hide_boot="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_debug"
        android:title="@string/debugging">

        <org.namelessrom.devicecontrol.preferences.CustomCheckBoxPreference
            android:key="extensive_logging"
            android:title="@string/extensive_logging"
            android:summaryOn="@string/extensive_logging_summary_on"
            android:summaryOff="@string/extensive_logging_summary_off"
            app:hide_boot="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_version_cat"
        android:title="@string/version">

        <org.namelessrom.devicecontrol.preferences.CustomPreference
            android:key="prefs_version"
            android:title="@string/empty"
            android:summary="@string/empty"
            app:hide_boot="true" />

    </PreferenceCategory>

</PreferenceScreen>

