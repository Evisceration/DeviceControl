    <!-- Wizard -->
    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">@dimen/page_top_margin</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="SetupWizardCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/wizard_card</item>
    </style>

    <style name="SetupWizardPageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="SetupWizardCard.Composite" parent="@style/SetupWizardPageContent">
        <item name="android:background">@drawable/wizard_card</item>
    </style>

    <style name="SetupWizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/title_top_margin</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="SetupWizardPageSummary">
        <item name="android:id">@android:id/summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SetupWizardPageLink" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="SetupWizardDivider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:textColor">@color/btn_action</item>
    </style>

    <style name="ButtonBar" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_action</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
    </style>

</resources>
