<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.namelessrom.devicecontrol"
    android:versionCode="50"
    android:versionName="0.4.6">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <!-- ACRA -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- In-App-Purchases -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <!-- Boot Up -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- SuperUser -->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <!-- uses-permission android:name="android.permission.GET_TASKS"/ -->

    <application
        android:name="org.namelessrom.devicecontrol.Application"
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:debuggable="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.namelessrom.devicecontrol.activities.DummyLauncher"
            android:enabled="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.namelessrom.devicecontrol.activities.MainActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="org.namelessrom.devicecontrol.activities.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.namelessrom.devicecontrol.activities.PerformanceActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="true"
            android:label="@string/performance"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="org.namelessrom.devicecontrol.activities.PerformanceActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="org.namelessrom.devicecontrol.wizard.AddTaskActivity" />

        <!-- Services -->
        <service
            android:name="org.namelessrom.devicecontrol.services.FstrimService"
            android:enabled="true" />
        <service
            android:name="org.namelessrom.devicecontrol.services.BootUpService"
            android:enabled="true" />
        <service
            android:name="org.namelessrom.devicecontrol.services.TaskerService"
            android:enabled="true" />

        <!-- Broadcast Receivers -->
        <receiver android:name="org.namelessrom.devicecontrol.receivers.BootUpReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="org.namelessrom.devicecontrol.receivers.SecretCodeReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE" />

                <data
                    android:host="13372"
                    android:scheme="android_secret_code" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
